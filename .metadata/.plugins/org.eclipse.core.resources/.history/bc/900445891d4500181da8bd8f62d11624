//        int m = Integer.parseInt(nm[1]);
//
//        long result = maximumEfficiency(n, m);
        maximumEfficiency(1, 3);
//        bufferedWriter.write(String.valueOf(result));
//        bufferedWriter.newLine();
//
//        bufferedWriter.close();

        scanner.close();
    }
}
