package com.weijinglab.blockgame;

import java.util.Arrays;
import java.util.List;

public class Main {

	public static final int BOARD_SIZE = 6;
	public static int[][] board = new int[BOARD_SIZE][BOARD_SIZE];
	
	public static void main(String[] args) {

		List<Block> blockList = initGame();
		board[0][0] = 2;
		board[1][0] = 2;
		board[2][0] = 2;
		putToBoard(board, blockList.get(0), 1);
		printBoard(board);
	}
	
	public static void putToBoard(int[][] boardToPut, Block block, int blockName) {

		boolean putOK = false;
		
		for(int i=0; i<BOARD_SIZE; i++) {
			for(int j=0; j<BOARD_SIZE; j++) {
				if(boardToPut[i][j] == 0) {
					System.out.println(i + "," + j);
					List<Point> pList = block.pointList;
					for(Point p : pList) {
						boardToPut[i + p.y - 1][j + p.x -1] = blockName;
					}
					putOK = true;
					break;
				}
			}
			if(putOK) {
				break;
			}
		}
		
	}

	public static void clearBoard(int[][] boardToClear) {
		for(int i=0; i<BOARD_SIZE; i++) {
			for(int j=0; j<BOARD_SIZE; j++) {
				boardToClear[i][j] = 0;
			}
		}
	}
	
	public static void printBoard(int[][] boardToPrint) {
		for(int i=0; i<BOARD_SIZE; i++) {
			for(int j=0; j<BOARD_SIZE; j++) {
				System.out.print(boardToPrint[i][j]+" ");
			}
			System.out.println();
		}
	}
	
	public static List<Block> initGame() {
		clearBoard(board);
		
		Point[] shape1 = new Point[] {
				new Point(1,1),
				new Point(2,1),
				new Point(3,1),
				new Point(3,2),
				new Point(4,2),
		};

		Point[] shape2 = new Point[] {
				new Point(1,1),
				new Point(2,1),
				new Point(3,1),
				new Point(3,2),
				new Point(3,3),
		};

		Point[] shape3 = new Point[] {
				new Point(1,1),
				new Point(1,2),
				new Point(2,1),
				new Point(2,2),
				new Point(2,3),
				new Point(2,4),
		};
		

		Point[] shape4 = new Point[] {
				new Point(1,1),
				new Point(1,2),
				new Point(1,3),
				new Point(2,3)
		};

		Point[] shape5 = new Point[] {
				new Point(1,1),
				new Point(1,2),
				new Point(2,1),
		};

		Point[] shape6 = new Point[] {
				new Point(1,1),
				new Point(1,2),
				new Point(1,3),
				new Point(2,1),
				new Point(2,2)
		};


		Point[] shape7 = new Point[] {
				new Point(2,1),
				new Point(2,2),
				new Point(1,2)
		};

		Point[] shape8 = new Point[] {
				new Point(1,1),
				new Point(2,1),
				new Point(2,3)
		};
		

		Point[] shape9 = new Point[] {
				new Point(1,1),
				new Point(1,2)
		};
		
		Block[] blockArr = new Block[] {
				new Block(shape1),
				new Block(shape2),
				new Block(shape3),
				new Block(shape4),
				new Block(shape5),
				new Block(shape6),
				new Block(shape7),
				new Block(shape8),
				new Block(shape9)
		};
		return Arrays.asList(blockArr);
	}

}
